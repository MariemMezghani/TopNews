<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">

        <item name="windowActionBar">false</item>

        <item name="windowNoTitle">true</item>

    </style>
    <style name="articleTitle">
        <item name="android:textColor">#000</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:lineSpacingMultiplier">0.9</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    </style>

    <style name="articleByLine">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:textSize">16sp</item>


    </style>


    <style name="articleBody">
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:padding">@dimen/detail_padding</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:lineSpacingMultiplier">@fraction/detail_body_line_spacing_multiplier</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="widgetTextViewStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorAccent</item>

    </style>
    <style name="WidgetItemStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">@dimen/padding</item>item>

    </style>


</resources>
